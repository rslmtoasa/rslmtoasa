&calculation
pre_processing = 'bravais'
verbose = T
/
&lattice
ndim = 50000 ! cluster dimension to begin with. We could think about guess it from the atom density in the primitive cell and the radius cut
rc = 60 ! radius cut. We could think about setting a default
alat = 2.471999903202706 ! lattice parapeter
crystal_sym = 'hcp' ! options are bcc, fcc and hcp so far.
wav = 1.3644350065222555
/
&atoms
database = './'
label(1) = 'Co1'
label(2) = 'Co2'
/
&self
ws_all = .true. ! ''
nstep = 2000
conv_thr = 0.5e-8
/
&energy
fermi = -0.06948384
energy_min = -1.0
energy_max = 0.5
channels_ldos = 2500
/
&control
calctype = 'B'
nsp = 1 ! type of calculation, nsp can be 1, 2, 3 or 4
lld = 21
recur = 'block'
!!conv_method = 'dyson'
!!gf_neighbors = 2
/
&mix
beta = 0.1
mixtype = 'broyden'
!!pre_its = 5
!!cycle_iter = 10
/

