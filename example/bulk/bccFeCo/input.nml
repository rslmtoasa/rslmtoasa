&calculation
pre_processing = 'bravais'
verbose = T
/
&lattice
rc = 010 ! radius cut. We could think about setting a default
alat = 2.859 ! lattice parapeter
crystal_sym = 'file' ! options are bcc, fcc and hcp so far.
wav = 1.406216
pbc = .false.
ntype = 2
ct(:) = 4.0d0
r2 = 16.0d0
/
&atoms
database = './'
